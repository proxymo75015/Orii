<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="0dp"
                android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_remote_background"/>
                </shape>
            </item>
            <item
                android:left="0dp"
                android:top="0dp">
                <shape android:shape="oval">
                    <solid android:color="@color/button_remote_background_pressed"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="0dp"
                android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_remote_background"/>
                </shape>
            </item>
            <item
                android:left="0dp"
                android:top="0dp">
                <shape android:shape="oval">
                    <stroke
                        android:width="3dp"
                        android:color="#ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
