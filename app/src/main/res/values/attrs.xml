<?xml version="1.0" encoding="utf-8"?>
<!--
    Fichier attrs.xml

    Ce fichier définit les attributs personnalisés utilisés dans l'application.
    Il n'est généralement pas nécessaire de le modifier pour exploiter les outils modernes
    (Hilt, coroutines, etc.) car il s'agit d'un fichier de ressources statiques.
-->
<resources>
    <!-- Attributs génériques -->
    <attr name="actualImageResource" format="reference" />
    <attr name="actualImageScaleType">
        <enum name="center" value="4" />
        <enum name="centerCrop" value="6" />
        <enum name="centerInside" value="5" />
        <enum name="fitBottomStart" value="8" />
        <enum name="fitCenter" value="2" />
        <enum name="fitEnd" value="3" />
        <enum name="fitStart" value="1" />
        <enum name="fitXY" value="0" />
        <enum name="focusCrop" value="7" />
        <enum name="none" value="-1" />
    </attr>
    <attr name="actualImageUri" format="string" />
    <attr name="animateProgress" format="boolean" />
    <attr name="argType" format="string" />
    <attr name="backgroundImage" format="reference" />
    <attr name="backgroundStrokeColor" format="color" />
    <attr name="backgroundStrokeWidth" format="dimension" />
    <attr name="buttonSize" format="reference">
        <enum name="icon_only" value="2" />
        <enum name="standard" value="0" />
        <enum name="wide" value="1" />
    </attr>
    <attr name="circleCrop" format="boolean" />
    <attr name="colorScheme" format="reference">
        <enum name="auto" value="2" />
        <enum name="dark" value="0" />
        <enum name="light" value="1" />
    </attr>

    <!-- Attributs pour Custom Stroke Bar (csb) -->
    <attr name="csb_arcColor" format="color" />
    <attr name="csb_arcWidth" format="dimension" />
    <attr name="csb_isShowText" format="boolean" />
    <attr name="csb_max" format="integer" />
    <attr name="csb_min" format="integer" />
    <attr name="csb_progress" format="integer" />
    <attr name="csb_progressColor" format="color" />
    <attr name="csb_progressWidth" format="dimension" />
    <attr name="csb_step" format="integer" />
    <attr name="csb_textColor" format="color" />
    <attr name="csb_textSize" format="dimension" />
    <attr name="csb_thumbDrawable" format="reference" />
    <attr name="csb_thumbSize" format="dimension" />

    <!-- Attributs divers -->
    <attr name="data" format="string" />
    <attr name="drawBackgroundStroke" format="boolean" />
    <attr name="emptyVisibility">
        <enum name="gone" value="0" />
        <enum name="invisible" value="1" />
    </attr>
    <attr name="fadeDuration" format="integer" />
    <attr name="failureImage" format="reference" />
    <attr name="failureImageScaleType">
        <enum name="center" value="4" />
        <enum name="centerCrop" value="6" />
        <enum name="centerInside" value="5" />
        <enum name="fitBottomStart" value="8" />
        <enum name="fitCenter" value="2" />
        <enum name="fitEnd" value="3" />
        <enum name="fitStart" value="1" />
        <enum name="fitXY" value="0" />
        <enum name="focusCrop" value="7" />
        <enum name="none" value="-1" />
    </attr>
    <attr name="foregroundStrokeCap">
        <enum name="butt" value="0" />
        <enum name="round" value="1" />
        <enum name="square" value="2" />
    </attr>
    <attr name="foregroundStrokeColor" format="color" />
    <attr name="foregroundStrokeWidth" format="dimension" />
    <attr name="imageAspectRatio" format="float" />
    <attr name="imageAspectRatioAdjust">
        <enum name="adjust_height" value="2" />
        <enum name="adjust_width" value="1" />
        <enum name="none" value="0" />
    </attr>
    <attr name="indeterminate" format="boolean" />
    <attr name="indeterminateMinimumAngle" format="float" />
    <attr name="indeterminateRotationAnimationDuration" format="integer" />
    <attr name="indeterminateSweepAnimationDuration" format="integer" />
    <attr name="maximum" format="float" />
    <attr name="overlayImage" format="reference" />
    <attr name="placeholderImage" format="reference" />
    <attr name="placeholderImageScaleType">
        <enum name="center" value="4" />
        <enum name="centerCrop" value="6" />
        <enum name="centerInside" value="5" />
        <enum name="fitBottomStart" value="8" />
        <enum name="fitCenter" value="2" />
        <enum name="fitEnd" value="3" />
        <enum name="fitStart" value="1" />
        <enum name="fitXY" value="0" />
        <enum name="focusCrop" value="7" />
        <enum name="none" value="-1" />
    </attr>
    <attr name="pressedStateOverlayImage" format="reference" />
    <attr name="progress" format="float" />
    <attr name="progressAnimationDuration" format="integer" />
    <attr name="progressBarAutoRotateInterval" format="integer" />
    <attr name="progressBarImage" format="reference" />
    <attr name="progressBarImageScaleType">
        <enum name="center" value="4" />
        <enum name="centerCrop" value="6" />
        <enum name="centerInside" value="5" />
        <enum name="fitBottomStart" value="8" />
        <enum name="fitCenter" value="2" />
        <enum name="fitEnd" value="3" />
        <enum name="fitStart" value="1" />
        <enum name="fitXY" value="0" />
        <enum name="focusCrop" value="7" />
        <enum name="none" value="-1" />
    </attr>
    <attr name="retryImage" format="reference" />
    <attr name="retryImageScaleType">
        <enum name="center" value="4" />
        <enum name="centerCrop" value="6" />
        <enum name="centerInside" value="5" />
        <enum name="fitBottomStart" value="8" />
        <enum name="fitCenter" value="2" />
        <enum name="fitEnd" value="3" />
        <enum name="fitStart" value="1" />
        <enum name="fitXY" value="0" />
        <enum name="focusCrop" value="7" />
        <enum name="none" value="-1" />
    </attr>
    <attr name="roundAsCircle" format="boolean" />
    <attr name="roundBottomEnd" format="boolean" />
    <attr name="roundBottomLeft" format="boolean" />
    <attr name="roundBottomRight" format="boolean" />
    <attr name="roundBottomStart" format="boolean" />
    <attr name="roundTopEnd" format="boolean" />
    <attr name="roundTopLeft" format="boolean" />
    <attr name="roundTopRight" format="boolean" />
    <attr name="roundTopStart" format="boolean" />
    <attr name="roundWithOverlayColor" format="color" />
    <attr name="roundedCornerRadius" format="dimension" />
    <attr name="roundingBorderColor" format="color" />
    <attr name="roundingBorderPadding" format="dimension" />
    <attr name="roundingBorderWidth" format="dimension" />
    <attr name="scopeUris" format="reference|string" />
    <attr name="speakerTitle" format="string" />
    <attr name="startAngle" format="float" />
    <attr name="themeLineHeight" format="dimension" />
    <attr name="viewAspectRatio" format="float" />
</resources>
