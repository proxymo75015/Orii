<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:tag="layout/using_orii_fragment_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/gifView"
        android:background="#ffffff"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/using_orii_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:placeholderImage="@raw/using_orii"
        app:roundWithOverlayColor="@android:color/white"
        app:roundedCornerRadius="200dp"/>
    <hiennguyen.me.circleseekbar.CircleSeekBar
        android:id="@+id/progressBar"
        android:background="@android:color/transparent"
        android:padding="30dp"
        android:layout_width="270dp"
        android:layout_height="270dp"
        app:csb_arcColor="#00ffffff"
        app:csb_arcWidth="5dp"
        app:csb_isShowText="false"
        app:csb_max="100"
        app:csb_min="0"
        app:csb_progress="20"
        app:csb_progressColor="#821122"
        app:csb_progressWidth="5dp"
        app:csb_thumbDrawable="@drawable/dark_red_circle"
        app:csb_thumbSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/gifView"
        app:layout_constraintEnd_toEndOf="@+id/gifView"
        app:layout_constraintStart_toStartOf="@+id/gifView"
        app:layout_constraintTop_toTopOf="@+id/gifView"/>
    <ImageView
        android:id="@+id/play_pause_image_view"
        android:tag="binding_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gifView"
        app:layout_constraintEnd_toEndOf="@+id/gifView"
        app:layout_constraintStart_toStartOf="@+id/gifView"
        app:layout_constraintTop_toTopOf="@+id/gifView"/>
    <TextView
        android:textSize="18sp"
        android:id="@+id/using_orii_title_text_view"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_find_the_sweet_spot_title_text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/colorGray"
        android:gravity="center"
        android:id="@+id/turn_on_content_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:text="@string/tutorial_using_orii_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/using_orii_title_text_view"/>
    <Button
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:id="@+id/next_text_button"
        android:background="@drawable/black_rectangular_10dp_button_background"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/tutorial_using_orii_sound_is_clear"
        android:textAllCaps="true"
        android:fontFamily="@font/din_medium"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turn_on_content_text_view"/>
    <ImageView
        android:id="@+id/add_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_add_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/textView25"
        app:layout_constraintLeft_toLeftOf="@+id/textView25"
        app:layout_constraintRight_toRightOf="@+id/textView25"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOL"
        app:layout_constraintBottom_toBottomOf="@+id/gifView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/gifView"
        app:layout_constraintTop_toTopOf="@+id/gifView"/>
    <ImageView
        android:id="@+id/minus_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_remove_black_24dp"
        app:layout_constraintEnd_toEndOf="@+id/textView25"
        app:layout_constraintStart_toStartOf="@+id/textView25"
        app:layout_constraintTop_toBottomOf="@+id/textView25"/>
</androidx.constraintlayout.widget.ConstraintLayout>
