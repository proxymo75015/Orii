<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Titre -->
    <TextView
        android:id="@+id/web_hook_tutorial_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/din_regular"
        android:text="@string/dialog_setting_gesture_web_hook_tutorial_title"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- « Back » ou texte important -->
    <TextView
        android:id="@+id/web_hook_tutorial_back_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/din_regular"
        android:paddingStart="1dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:text="@string/dialog_setting_gesture_web_hook_back"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web_hook_tutorial_title_text_view" />

    <!-- Contenu principal (texte explicatif) -->
    <TextView
        android:id="@+id/web_hook_tutorial_content_text_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/din_regular"
        android:text="@string/dialog_setting_gesture_web_hook_tutorial_content"
        android:textColor="@color/colorGray"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web_hook_tutorial_back_text_view" />

    <!-- Lien ou bouton texte pour « lancer la vidéo » -->
    <TextView
        android:id="@+id/web_hook_tutorial_play_video_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/din_regular"
        android:paddingStart="15dp"
        android:paddingEnd="1dp"
        android:paddingTop="15dp"
        android:text="@string/dialog_setting_gesture_web_hook_tutorial_play_video"
        android:textColor="@color/colorGreen"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
