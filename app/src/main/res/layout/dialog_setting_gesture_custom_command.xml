<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_custom_command_layout"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_15dp_corner_3dp_white_stroke_white_solid"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <!-- Titre -->
    <TextView
        android:id="@+id/dialog_custom_command_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/din_regular"
        android:text="@string/dialog_setting_gesture_custom_command_title"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Groupe de boutons radio -->
    <RadioGroup
        android:id="@+id/dialog_custom_command_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/custom_command_option_0_radio_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_custom_command_title">

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGray2" />

        <!-- Option 0 -->
        <RadioButton
            android:id="@+id/custom_command_option_0_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorGray"
            android:fontFamily="@font/din_regular"
            android:layoutDirection="rtl"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:text="@string/dialog_setting_gesture_custom_command_option_0"
            android:textAlignment="textStart"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGray2" />

        <!-- Option 1 -->
        <RadioButton
            android:id="@+id/custom_command_option_1_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorGray"
            android:fontFamily="@font/din_regular"
            android:layoutDirection="rtl"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:text="@string/dialog_setting_gesture_custom_command_option_1"
            android:textAlignment="textStart"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGray2" />

        <!-- Option 2 -->
        <RadioButton
            android:id="@+id/custom_command_option_2_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorGray"
            android:fontFamily="@font/din_regular"
            android:layoutDirection="rtl"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:text="@string/dialog_setting_gesture_custom_command_option_2"
            android:textAlignment="textStart"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGray2" />

        <!-- Option 3 -->
        <RadioButton
            android:id="@+id/custom_command_option_3_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorGray"
            android:fontFamily="@font/din_regular"
            android:layoutDirection="rtl"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:text="@string/dialog_setting_gesture_custom_command_option_3"
            android:textAlignment="textStart"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGray2" />

        <!-- Option 4 -->
        <RadioButton
            android:id="@+id/custom_command_option_4_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorGray"
            android:fontFamily="@font/din_regular"
            android:layoutDirection="rtl"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:text="@string/dialog_setting_gesture_custom_command_option_4"
            android:textAlignment="textStart"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGray2" />

        <!-- Option 5 -->
        <RadioButton
            android:id="@+id/custom_command_option_5_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorGray"
            android:fontFamily="@font/din_regular"
            android:layoutDirection="rtl"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:text="@string/dialog_setting_gesture_custom_command_option_5"
            android:textAlignment="textStart"
            android:textColor="@color/colorGray"
            android:textSize="16sp" />

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorGray2" />

    </RadioGroup>

    <!-- Bouton “Enter” -->
    <Button
        android:id="@+id/dialog_custom_command_enter_button"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_5dp_corner_3dp_green_stroke_primary_solid"
        android:fontFamily="@font/din_regular"
        android:text="@string/dialog_setting_gesture_custom_command_enter"
        android:textColor="@color/colorGreen"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/dialog_custom_command_radio_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Bouton “Cancel” -->
    <Button
        android:id="@+id/dialog_custom_command_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_5dp_corner_3dp_gray_stroke_gray_solid"
        android:fontFamily="@font/din_regular"
        android:text="@string/dialog_setting_gesture_custom_command_cancel"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/dialog_custom_command_radio_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
