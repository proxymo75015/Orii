<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- ViewPager personnalisé occupant tout l’écran -->
    <com.origamilabs.orii.ui.tutorial.TutorialViewPager
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Menu en haut à gauche -->
    <TextView
        android:id="@+id/menu_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/din_regular"
        android:gravity="center"
        android:text="@string/tutorial_menu"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Image d’aide en haut à droite -->
    <ImageView
        android:id="@+id/help_image_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_question_mark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bouton « Back » en bas à gauche -->
    <TextView
        android:id="@+id/back_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/din_regular"
        android:gravity="center"
        android:paddingEnd="30dp"
        android:paddingStart="0dp"
        android:paddingTop="30dp"
        android:text="@string/tutorial_back"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bouton « Next » en bas à droite -->
    <TextView
        android:id="@+id/next_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/din_regular"
        android:gravity="center"
        android:paddingEnd="0dp"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:text="@string/tutorial_next"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Indicateurs de progression en bas (au-dessus des boutons) -->
    <LinearLayout
        android:id="@+id/progress_circles_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Exemples d’indicateurs : Circle 0, 1, 2… -->
        <ImageView
            android:id="@+id/circle_0_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_1_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_2_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <!-- Répéter ce modèle pour tous les cercles restants -->
        <ImageView
            android:id="@+id/circle_3_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_4_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_5_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_6_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_7_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_8_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_9_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_10_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_11_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_12_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_13_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_14_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

        <ImageView
            android:id="@+id/circle_15_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/progress_circle_00" />

    </LinearLayout>

    <!-- Layout superposé (masque) pour annotations ou overlays -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tutorial_mask_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mask_background_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tutorial_mask_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Exemple : menu en surbrillance -->
        <TextView
            android:id="@+id/tutorial_mask_menu_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/tutorial_text_border"
            android:fontFamily="@font/din_regular"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/tutorial_menu"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tutorial_mask_menu_line_view"
            android:layout_width="1dp"
            android:layout_height="75dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tutorial_mask_menu_text_view"
            app:layout_constraintEnd_toEndOf="@+id/tutorial_mask_menu_text_view"
            app:layout_constraintTop_toBottomOf="@+id/tutorial_mask_menu_text_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_bold"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/tutorial_menu_explain"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tutorial_mask_menu_line_view"
            app:layout_constraintStart_toEndOf="@+id/tutorial_mask_menu_line_view" />

        <!-- Exemple : bouton « Back » -->
        <TextView
            android:id="@+id/tutorial_mask_back_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/tutorial_text_border"
            android:fontFamily="@font/din_regular"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/tutorial_back"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/tutorial_mask_back_line_view"
            android:layout_width="1dp"
            android:layout_height="75dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/tutorial_mask_back_text_view"
            app:layout_constraintStart_toStartOf="@+id/tutorial_mask_back_text_view"
            app:layout_constraintEnd_toEndOf="@+id/tutorial_mask_back_text_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_bold"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:text="@string/tutorial_back_explain"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/tutorial_mask_back_line_view"
            app:layout_constraintStart_toEndOf="@+id/tutorial_mask_back_line_view" />

        <!-- Exemple : bouton « Next » -->
        <TextView
            android:id="@+id/tutorial_mask_next_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/tutorial_text_border"
            android:fontFamily="@font/din_regular"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/tutorial_next"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/tutorial_mask_next_line_view"
            android:layout_width="1dp"
            android:layout_height="75dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/tutorial_mask_next_text_view"
            app:layout_constraintStart_toStartOf="@+id/tutorial_mask_next_text_view"
            app:layout_constraintEnd_toEndOf="@+id/tutorial_mask_next_text_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_bold"
            android:gravity="center"
            android:layout_marginEnd="5dp"
            android:text="@string/tutorial_next_explain"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/tutorial_mask_next_line_view"
            app:layout_constraintEnd_toStartOf="@+id/tutorial_mask_next_line_view" />

        <!-- Titre principal ou phrase incitative au centre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_bold"
            android:gravity="center"
            android:text="@string/tutorial_tap_the_next_button_to_proceed"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
