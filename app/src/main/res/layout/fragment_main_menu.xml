<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tutorial_main_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Premier CardView : titre -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu_title_card_view"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        app:cardBackgroundColor="@color/colorTransparent"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_regular"
                android:text="@string/tutorial_main_menu_title_text"
                android:textColor="@color/colorGray"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Deuxième CardView : “Find the Fit” -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu_find_the_fit_card_view"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_title_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_regular"
                android:layout_marginStart="10dp"
                android:text="@string/tutorial_main_menu_find_the_fit"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_right_gray_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Troisième CardView : “Find the Sweet Spot” -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu_find_the_sweet_spot_card_view"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_find_the_fit_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_regular"
                android:layout_marginStart="10dp"
                android:text="@string/tutorial_main_menu_find_the_sweet_spot"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_right_gray_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Quatrième CardView : “Message Readout” -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu_message_readout_card_view"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_find_the_sweet_spot_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_regular"
                android:layout_marginStart="10dp"
                android:text="@string/tutorial_main_menu_message_readout"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_right_gray_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Cinquième CardView : “Voice Assistant” -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu_voice_assistant_card_view"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_message_readout_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_regular"
                android:layout_marginStart="10dp"
                android:text="@string/tutorial_main_menu_calling_the_voice_assistant"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_right_gray_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Sixième CardView : “Gesture” -->
    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu_gesture_card_view"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_voice_assistant_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_regular"
                android:layout_marginStart="10dp"
                android:text="@string/tutorial_main_menu_gesture"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_right_gray_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
